<% if session[:user] == nil %>

<div align="center">
  <div class="span12 well">
  <div class="jumbotron">
    <h1>Welcome!</h1>
    <p>The whiteboards are a place you can connect with your peers and professors remotely using interactive whiteboards!</p>
    <%= link_to "Signup", new_user_path, :class => "btn btn-primary" %>
    <%= link_to "Login", new_session_path, :class => "btn btn-success" %>
  </div>
  </div>
</div>

<% else %>
<p class='lead'>Subscribed Courses</p>
<% session[:user].subscribed_courses.each do |sub| %>
<div class='span8 well'>
  <%= sub %>
</div>
<% end %>

<% end %>