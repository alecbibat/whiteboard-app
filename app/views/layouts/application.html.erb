<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whiteboards</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <header>
      <div class="navbar">
        <div class="navbar-inner">
          <div class="container">
            <%= render 'layouts/navigation' %>
          </div>
        </div>
      </div>
    </header>
    <div id="main" role="main">
      <div class="container">
        <% if session[:user] != nil and @mycoursespage == false %>
          <div class="row">
            <div class='span2'>
              <h3 class='lead'>Sidebar</h3>
              <% session[:user].courses.each do |sub| %>
              <%= link_to course_path(sub) do %>
              <%= sub.department %>
              <%= sub.number %>
              <% end %>
              <% end %>
            </div>
            <div class="span9">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
        <% else %>
          <div class="row">
          <div class="span12">
            <%= render 'layouts/messages' %>
            <%= yield %>
          </div>
        </div>
        <% end %>
        <footer>
        </footer>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>
