<div class='span9 well'>
<% @month = Date.today.month.to_s %>
<% if @month == '1'
		@month_name = 'January'
 	elsif @month == '2'
		@month_name = 'February' 
	elsif @month == '3'
		@month_name = 'March'
	elsif @month == '4'
		@month_name = 'April'
	elsif @month == '5'
		@month_name = 'May'
	elsif @month == '6'
		@month_name = 'June'
	elsif @month == '7'
		@month_name = 'July'
	elsif @month == '8'
		@month_name = 'August'
	elsif @month == '9'
		@month_name = 'September'
	elsif @month == '10'
		@month_name = 'October'
	elsif @month == '11'
		@month_name = 'November'
	elsif @month == '12'
		@month_name = 'December'
end %>

<p class='lead'><%= @month_name %></p>

<p class='quiet small'><%= @course.name %></p>

<%=

options = { extra_day_classes: lambda { |classes, date|
  classes << 'cal-day-daylight' if (5 == date.day)  
  classes << 'cal-day-night' if (10 == date.day)
  }
}
bootstrap_calendar Date.today, options do |date|
	params[:id] = date
  content_tag :span, class: "pull-right", "data-cal-date" => "some", "data-cal-view" => "day" do
    (link_to date.day.to_s, course_events_path(@course, params[:id]))
  end
end
%>

</div>