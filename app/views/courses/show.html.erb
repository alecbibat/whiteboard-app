<div class='span8 well'>

<h4> <%= @course.name %> </h4>
<p class="quiet"> <%= @course.department %> | <%= @course.number %> </p>
<%= form_for @post do |f| %>

<div class="control-group">
<%= f.label :title %>
<%= f.text_field :title %>
</div>

<div class="control-group">
<%= f.label :description %>
<%= f.text_area :description %>
</div>

<div class="control-group">
<%= f.submit "Create Thread", class: "btn btn-primary" %>
</div>

<% end %>
</div>

<% @course.posts.reload.each do |post| %>
  <div class="span8 well">
    <%= post.description %>
  </div>
<% end %>