

<%= render 'shared/errors', obj: @course %>

<div class="span8 well">

  <%= render 'shared/header', title: 'Register a Course' %>

  <%= form_for @course do |f| %>

  <div class="control-group">
    <%= f.label :name %>
    <%= f.text_field :name, :placeholder => "Foundations of Modern Physics" %>
  </div>

  <div class="control-group">
    <%= f.label :department %>
    <%= f.text_field :department, :placeholder => "PHYS" %>
  </div>

  <div class="control-group">
    <%= f.label :number %>
    <%= f.text_field :number, :placeholder => 2170 %>
  </div>

  <div class='control-group'>
    <%= f.label :description %>
    <%= f.text_area :description, :placeholder => "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi ac dolor eu arcu elementum dictum id eu sem. Nunc id elit vehicula, luctus nibh sed, tristique quam. Nunc pellentesque vehicula risus, sed pulvinar nisi accumsan faucibus. Proin pulvinar, ipsum vitae tincidunt congue, ante lacus commodo lacus, ac pharetra mauris arcu sit amet ligula.", size: '10x10' %>
  </div>

  <div class="control-group">
  <%= f.submit "Register course", class: "btn btn-success" %>
  </div>

  <% end %>
</div>